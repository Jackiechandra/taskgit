<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="jquery/fileUploader/css/jquery.fileupload-ui.css"/>
        <css src="Aheadworks_Blog::css/category-selector.css"/>
        <css src="Aheadworks_Blog::css/tokenize.css"/>
    </head>
    <update handle="editor"/>
    <body>
        <referenceContainer name="content">
            <block class="Aheadworks\Blog\Block\Adminhtml\Post\Edit" name="aw_blog_post_edit"/>
            <block class="Aheadworks\Blog\Block\Adminhtml\Post\Edit\NewCategory" name="new_category" template="Aheadworks_Blog::blog/post/edit/form/category/new/form.phtml"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Aheadworks\Blog\Block\Adminhtml\Post\Edit\Tabs" name="aw_blog_post_edit_tabs">
                <block class="Aheadworks\Blog\Block\Adminhtml\Post\Edit\Tab\Content" name="aw_blog_post_edit_tab_content"/>
                <block class="Aheadworks\Blog\Block\Adminhtml\Post\Edit\Tab\Thumbnail" name="aw_blog_post_edit_tab_thumbnail"/>
                <block class="Aheadworks\Blog\Block\Adminhtml\Post\Edit\Tab\Additional" name="aw_blog_post_edit_tab_additional"/>
                <block class="Aheadworks\Blog\Block\Adminhtml\Post\Edit\Tab\Meta" name="aw_blog_post_edit_tab_meta"/>
                <block class="Aheadworks\Blog\Block\Adminhtml\Post\Edit\Tab\Statistics" name="aw_blog_post_edit_tab_statistics"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">content_section</argument>
                    <argument name="block" xsi:type="string">aw_blog_post_edit_tab_content</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">thumbnail_section</argument>
                    <argument name="block" xsi:type="string">aw_blog_post_edit_tab_thumbnail</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">additional_section</argument>
                    <argument name="block" xsi:type="string">aw_blog_post_edit_tab_additional</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">meta_section</argument>
                    <argument name="block" xsi:type="string">aw_blog_post_edit_tab_meta</argument>
                </action>
                <action method="addTab">
                    <argument name="name" xsi:type="string">statistics_section</argument>
                    <argument name="block" xsi:type="string">aw_blog_post_edit_tab_statistics</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
