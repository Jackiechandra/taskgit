<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="left" htmlClass="admin__scope-old" htmlTag="div" />
        <referenceContainer name="page.main.actions">
            <block class="Magento\Backend\Block\Store\Switcher" name="category.store.switcher" template="Magento_Backend::store/switcher.phtml" />
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Aheadworks\Blog\Block\Adminhtml\Category\Tree" name="aw_blog_category_tree" template="blog/category/tree.phtml"/>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Aheadworks\Blog\Block\Adminhtml\Category\Edit" name="aw_blog_category_edit" template="blog/category/edit.phtml">
                <block class="Aheadworks\Blog\Block\Adminhtml\Category\Tabs" name="aw_blog_category_tabs" as="tabs" template="Magento_Backend::widget/tabshoriz.phtml">
                    <block class="Aheadworks\Blog\Block\Adminhtml\Category\Tab\General" name="aw_blog_category_edit_tab_general"/>
                    <block class="Aheadworks\Blog\Block\Adminhtml\Category\Tab\Meta" name="aw_blog_category_edit_tab_meta"/>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">general_section</argument>
                        <argument name="block" xsi:type="string">aw_blog_category_edit_tab_general</argument>
                    </action>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">meta_section</argument>
                        <argument name="block" xsi:type="string">aw_blog_category_edit_tab_meta</argument>
                    </action>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
